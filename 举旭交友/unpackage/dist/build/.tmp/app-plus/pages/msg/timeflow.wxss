.flow-slide {
  margin-top: -160rpx;
}
.flow-slide swiper,
  .flow-slide swiper-item {
    height: 750rpx;
}
.flow-slide swiper image,
    .flow-slide swiper-item image {
      width: 100%;
      height: 750rpx;
}
.user-info {
  background: #FFF;
  padding: 30rpx 0;
  position: relative;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  margin-top: -30rpx;
}
.user-info .cu-avatar.lg {
    height: 120rpx;
    width: 120rpx;
}
.user-info .cu-list.menu-avatar > .cu-item:after {
    height: 0;
    border-bottom: 0.5px dashed #ddd;
}
.user-info .cu-list.menu-avatar > .cu-item {
    height: 160rpx;
}
.user-info .cu-list.menu-avatar > .cu-item .content {
    left: 170rpx;
    top: 20rpx;
}
.user-info .focus {
    color: #DB2D4E;
    border: 1rpx solid #DB2D4E;
    width: 168rpx;
    height: 48rpx;
    border-radius: 30rpx;
    text-align: center;
}
.user-info .focus .iconfont {
      margin-right: 10rpx;
}
.user-info .cradit {
    background: #2DDBC4;
    color: #FFF;
    width: 170rpx;
    height: 48rpx;
    font-size: 26rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    border-radius: 6rpx;
    position: absolute;
    top: 50rpx;
    right: 30rpx;
}
.user-info .cradit image {
      width: 26rpx;
      height: 26rpx;
}
.cu-card {
  margin-bottom: 20rpx;
}
.cu-card .justify-around .iconfont {
