.cu-form-group {
  position: relative;
}
.mpvue-picker,
.show-citypicker {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
}
.show-citypicker {
  z-index: 4;
}
.photo-cont {
  background: #fff;
  height: 120rpx;
  position: relative;
  margin-top: 140rpx;
}
.photo-cont .photo {
    height: 200rpx;
    width: 200rpx;
    border-radius: 50%;
    overflow: hidden;
    position: absolute;
    top: -100rpx;
    left: 50%;
    margin-left: -100rpx;
}
.photo-cont .photo image {
      width: 100%;
      height: 100%;
}
.photo-cont .btn {
    font-size: 20rpx;
    line-height: 50rpx;
    background: rgba(0, 0, 0, 0.5);
    color: #FFF;
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}
.has-bl {
  border-left: 8rpx solid #2DDBC4;
}
.prefer-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
}
.prefer-list > view {
    padding: 10rpx 30rpx;
    border-radius: 30rpx;
    background: #FFF;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    font-size: 24rpx;
}
.prefer-list > view.active {
      background: #2DDBC4;
      color: #FFF;
}
.cu-form-group .title {
  min-width: calc(4em + 15px);
}
.cu-form-group + .cu-form-group {
  border: none;
}
.icon-cont {
  width: 160rpx;
  height: 160rpx;
  text-align: center;
  line-height: 160rpx;
  position: absolute;
  top: -80rpx;
  left: 50%;
  margin-left: -80rpx;
  border-radius: 50%;
}
.icon-cont .iconfont {
    font-size: 70rpx;
}

