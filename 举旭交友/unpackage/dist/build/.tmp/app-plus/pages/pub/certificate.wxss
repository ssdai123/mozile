.apply-top {
  height: 476rpx;
  position: relative;
  color: #FFF;
  margin-top: -100px;
}
.apply-top > image {
    height: 100%;
    width: 100%;
}
.info-cont {
  margin: 60rpx 40rpx;
  padding: 40rpx 30rpx;
  position: relative;
  background: #FFF;
  border-radius: 10rpx;
  margin-top: -220rpx;
}
.info-cont .input-cont {
    margin-bottom: 30rpx;
    position: relative;
}
.info-cont .input-cont::before {
      content: '*';
      color: #DA5858;
      position: absolute;
      top: 50%;
      left: 20rpx;
      margin-top: -8rpx;
}
.info-cont input {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx 0 40rpx;
    border: 1rpx solid #E5E5E5;
    font-size: 24rpx;
    border-radius: 5rpx;
}
.info-cont .face-place {
    text-align: center;
}
.info-cont .face-place image {
      height: 360rpx;
      width: 300rpx;
}

