page {
  background: #FFF;
}
.top-cont {
  background: #1F2026;
  padding: 100rpx 0;
  margin-top: -2rpx;
  color: #FFF;
  position: relative;
}
.top-cont::after {
    content: '';
    height: 30rpx;
    width: 30rpx;
    background: #FFF;
    position: absolute;
    bottom: -15rpx;
    left: 30rpx;
    -webkit-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
            transform: rotate(45deg);
}
.top-cont .circle {
    width: 280rpx;
    height: 280rpx;
    position: relative;
}
.top-cont .circle image {
      width: 100%;
      height: 100%;
}
.top-cont .circle view {
      height: 100%;
      width: 100%;
      position: absolute;
      top: 0;
      left: 0;
}
.info-cont {
  margin: 60rpx 40rpx;
  border: 1rpx solid #2DDBC4;
  padding: 60rpx 40rpx;
  position: relative;
}
.info-cont .label {
    padding: 15rpx 30rpx;
}
.info-cont input {
    height: 80rpx;
    padding: 15rpx 30rpx;
    border: 1rpx solid #E5E5E5;
    font-size: 24rpx;
}
.info-cont .tit {
    width: 90%;
    background: #FFF;
    position: absolute;
    top: -20rpx;
    left: 5%;
    text-align: center;
    color: #2DDBC4;
}
.info-cont .tit::before, .info-cont .tit::after {
      content: '';
      height: 14rpx;
      width: 14rpx;
      background: #2DDBC4;
      position: absolute;
      top: 50%;
      margin-top: -7rpx;
      -webkit-transform: rotate(45deg);
          -ms-transform: rotate(45deg);
              transform: rotate(45deg);
}
.info-cont .tit::before {
      left: 20rpx;
}
.info-cont .tit::after {
      right: 20rpx;
}

