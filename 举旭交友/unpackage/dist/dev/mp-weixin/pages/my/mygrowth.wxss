}
.grown-list .list {
    padding: 20rpx 0 20rpx 40rpx;
    position: relative;
}
.grown-list .list::before {
      content: '';
      width: 14rpx;
      height: 14rpx;
      background: #333;
      position: absolute;
      top: 50%;
      left: 0;
      -webkit-transform: rotate(45deg);
          -ms-transform: rotate(45deg);
              transform: rotate(45deg);
      margin-top: -7rpx;
}
