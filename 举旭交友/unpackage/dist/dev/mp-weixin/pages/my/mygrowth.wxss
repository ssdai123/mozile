.progress {
  margin: 20rpx 30rpx 50rpx;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.6);
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  position: relative;
}
.progress > text {
    position: absolute;
    top: 30rpx;
}
.progress > text:first-of-type {
    left: 0;
}
.progress > text:last-of-type {
    right: 0;
}
.progress .inner {
    width: 30%;
    height: 100%;
    background: #FFF;
    -webkit-border-radius: 10rpx;
            border-radius: 10rpx;
    position: relative;
}
.progress .inner .dot {
      width: 24rpx;
      height: 24rpx;
      background: #FFF;
      position: absolute;
      top: -4rpx;
      right: -4rpx;
      -webkit-border-radius: 50%;
              border-radius: 50%;
}
.progress .inner .dot text {
        position: absolute;
        top: 35rpx;
        left: 0;
        display: inline-block;
        -webkit-transform: translateX(-20%);
            -ms-transform: translateX(-20%);
                transform: translateX(-20%);
}
.grown-list {
