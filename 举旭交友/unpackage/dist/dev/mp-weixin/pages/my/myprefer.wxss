.prefer-cont {
  padding: 30rpx;
}
.prefer-cont .prefer-tit {
    position: relative;
    padding: 0 14rpx;
}
.prefer-cont .prefer-tit::before {
      content: '';
      height: 80%;
      width: 4rpx;
      background: #2DDBC4;
      position: absolute;
      top: 3%;
      left: 0;
}
.prefer-cont .prefer-list {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-wrap: wrap;
        -ms-flex-wrap: wrap;
            flex-wrap: wrap;
}
.prefer-cont .prefer-list > view {
      padding: 0 30rpx;
      height: 60rpx;
      line-height: 65rpx;
      -webkit-border-radius: 50rpx;
              border-radius: 50rpx;
      background: #FFF;
      margin-right: 20rpx;
      margin-bottom: 20rpx;
      font-size: 28rpx;
}
.prefer-cont .prefer-list > view.active {
        background: #2DDBC4;
        color: #FFF;
}

