page {
  overflow: hidden;
}
.share-bg,
.cont {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 44px;
  left: 0;
  overflow: hidden;
}
.inner-cont {
  width: 90%;
  margin-top: 25%;
  margin-left: 5%;
  padding: 20rpx;
}
.inner-cont .inner {
    padding: 10rpx;
    border: 1rpx solid #CAA686;
    position: relative;
    text-align: center;
}
.inner-cont .inner .square {
      height: 28rpx;
      height: 31rpx;
      background: #CAA686;
      position: absolute;
}
.inner-cont .inner .square:nth-child(1) {
      left: 0;
      top: 0;
}
.inner-cont .inner .square:nth-child(2) {
      right: 0;
      top: 0;
}
.inner-cont .inner .square:nth-child(3) {
      left: 0;
      bottom: 0;
}
.inner-cont .inner .square:nth-child(4) {
      right: 0;
      bottom: 0;
}
.inner-cont .tit {
    height: 80rpx;
    width: 274rpx;
    text-align: center;
    background: #CAA686;
    position: absolute;
    left: 50%;
    top: -40rpx;
    -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
            transform: translateX(-50%);
    color: #FFF;
    line-height: 80rpx;
    font-size: 44rpx;
    font-style: italic;
    letter-spacing: 10rpx;
    padding-left: 10rpx;
}
.inner-cont .tit::before, .inner-cont .tit::after {
      content: '';
      height: 0;
      width: 0;
      border-style: solid;
      border-width: 10rpx;
      border-color: transparent #AA8C71 #AA8C71 transparent;
      position: absolute;
      top: 0;
}
.inner-cont .tit::before {
      left: -19rpx;
}
.inner-cont .tit::after {
      right: -19rpx;
      -webkit-transform: rotate(90deg);
          -ms-transform: rotate(90deg);
              transform: rotate(90deg);
}
.inner-cont .sub-tit {
    color: #CAA686;
    font-size: 40rpx;
    display: inline-block;
    margin-top: 70rpx;
    position: relative;
}
.inner-cont .sub-tit image {
      width: 70rpx;
      height: 10rpx;
      position: absolute;
      top: 20rpx;
}
.inner-cont .sub-tit image:first-child {
      left: -80rpx;
}
.inner-cont .sub-tit image:last-child {
      right: -80rpx;
}
.inner-cont .qr-cont {
    width: 316rpx;
    height: 316rpx;
    border: 4rpx solid #CAA686;
    padding: 20rpx;
    margin: 50rpx auto;
}
.inner-cont .qr-cont image {
      height: 100%;
      width: 100%;
}
.inner-cont .d-btn {
    background-color: none;
    border: 1rpx solid #1F2026;
    width: 345rpx;
    height: 75rpx;
    -webkit-border-radius: 40rpx;
            border-radius: 40rpx;
    margin: 40rpx auto;
}
.inner-cont .d-btn .iconfont {
      font-size: 40rpx;
}
.share-cont image {
  height: 62rpx;
  width: 62rpx;
  margin-bottom: 20rpx;
}

